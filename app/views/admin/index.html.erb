<div class='page-header'>
  <h1>Admin</h1>
</div>

<div class='row'>
  <div class='col-md-4'>
    <div class='well'>
      <h4>Elections</h4>
      <%= button_to 'Create Election', admin_elections_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class='col-md-4'>
    <div class='well'>
      <h4>Kegs</h4>
      <%= button_to sync_admin_kegs_path, class: 'btn btn-primary sync-kegs' do %>
        Sync Kegs <span class='glyphicon glyphicon-refresh'></span>
      <% end %>
      <br>
      <em><%= link_to 'Visit Hazelâ€™s', 'http://www.hazelsboulder.com/main.asp?request=search&type=B&sel_category=20977&user1=15.5+GALLON&pageNo=1' %></em>
    </div>
  </div>
</div>

<div class='page-header'>
  <h1>Kegs (<%= @kegs.count %>)</h1>
</div>

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th><h4>Name</h4></th>
      <th><h4>Size</h4></th>
      <th><h4>Price</h4></th>
      <th><h4>Sale Price</h4></th>
      <th><h4>Last Updated</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @kegs.each do |keg| %>
      <tr>
        <td><%= link_to keg.name, keg.url %></td>
        <td><%= keg.size %></td>
        <td><%= keg.pretty_price %></td>
        <td>
          <% unless keg.sale_price.nil? %>
            <%= keg.pretty_sale_price %>
          <% end %>
        </td>
        <td><%= time_ago_in_words(keg.updated_at).capitalize %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>
